{
  "name": "pokemon-quizer",
  "version": "1.0.0",
  "scripts": {
    "dev": "dojo build --mode dev --watch file --serve",
    "build": "dojo build --mode dist",
    "build:dev": "dojo build --mode dev",
    "data": "node data",
    "deploy": "now",
    "now-build": "npm run build && mv ./output/dist /public",
    "prettier": "prettier --write \"{src,tests,scripts}/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@dojo/framework": "^4.0.0",
    "@dojo/themes": "^4.0.0",
    "@dojo/widgets": "^4.0.0",
    "material-design-icons": "^3.0.1",
    "tslib": "~1.8.1"
  },
  "devDependencies": {
    "@dojo/cli": "^4.0.0",
    "@dojo/cli-build-app": "^4.0.0",
    "@dojo/cli-test-intern": "^4.0.0",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "~9.6.5",
    "@types/node-fetch": "^2.1.4",
    "chalk": "^2.4.2",
    "fs-extra": "^7.0.1",
    "node-fetch": "^2.3.0",
    "ora": "^3.0.0",
    "prettier": "^1.15.3",
    "shx": "^0.3.2",
    "ts-node": "^7.0.1",
    "typescript": "~2.6.1"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
